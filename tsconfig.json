{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./",
    "checkJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "es6",
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "dist",
    "node_modules/*",
    "node_modules/@types/*"
  ],
  "paths": {
    "@why/*": ["./src/*"]
  }
}
